header.header 
  nav.nav.nav--tours
    a.nav__el(href= '/') All tours 
    form.nav__search
      button.nav__search-btn 
        svg: use(xlink:href='/img/icons.svg#icon-search')
      input(type='text' placeholder='Search tours' class='nav__search-input')

  div.header__logo 
    img(src='/img/logo-white.png' alt='Natours logo')
  
  //NAVIGATION WAS ACTUALLY NECESSARY WITH CONDITIONAL BECAUSE THIS IS THE HEADER 
  nav.nav.nav--user
    if(!user)
      a.nav__el(href='/login')
        button.nav__el Log in
      button.nav__el.nav__el--cta Sign up
    if(user)
      //- a.nav__el(href='#') My bookings 
      a.nav__el
        button.nav__el.logout Log out
      a.nav__el(href='/me')
        img.nav__user-img(src=`/img/users/${user.photo}` alt=`${user.name}`)
        span=user.name